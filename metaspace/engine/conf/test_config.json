{
  "defaults": {
    "adducts": {
      "+": ["+H", "+Na", "+K"],
      "-": ["-H", "+Cl"]
    }
  },
  "db": {
    "host": "localhost",
    "database": "sm_test",
    "user": "sm",
    "password": "securepassword"
  },
  "elasticsearch": {
    "index": "sm_test",
    "host": "localhost",
    "port": 9200
  },
  "rabbitmq": {
    "host": "localhost",
    "user": "sm",
    "password": "password"
  },
  "services": {
    "web_app_url": "http://localhost:8082",
    "img_service_url": "http://localhost:4201",
    "mol_db": "http://localhost:5001/v1",
    "off_sample": "http://localhost:9876/off-sample",
    "send_email": false,
    "update_daemon_threads": 1
  },
  "fs": {
    "data_path": "/tmp/abc",
    "spark_data_path": "/tmp/abc",
    "s3_base_path": ""
  },
  "spark": {
    "master": "local[4]",
    "executor.memory": "2g",
    "spark.sql.execution.arrow.enabled": true
  },
  "aws": {
    "aws_access_key_id": "",
    "aws_secret_access_key": "",
    "aws_region": "eu-west-1"
  },
  "slack": {},
  "ms_file_handlers": [{
      "type": "ims",
      "extensions": ["imzml", "ibd"],
      "parser_factory": {
        "name": "ImzMLParser",
        "path": "pyimzml.ImzMLParser"
      },
      "img_storage_type": "fs"
    }, {
      "type": "lcms",
      "extensions": ["mzml"],
      "parser_factory": {
        "name": "MzMLParser",
        "path": "sm.engine.mzml_parser"
      },
      "img_storage_type": "db"
  }],
  "isotope_storage": {
    "path": "/tmp/isotope_storage"
  },
  "logs": {
    "version": 1,
    "formatters": {
      "sm": {
        "format": "%(asctime)s - %(levelname)s - %(name)s - %(filename)s:%(lineno)d - %(message)s"
      }
    },
    "handlers": {
        "console_warn": {
            "class": "logging.StreamHandler",
            "formatter": "sm",
            "level": "WARNING"
        },
        "console_debug": {
            "class": "logging.StreamHandler",
            "formatter": "sm",
            "level": "DEBUG"
        }
    },
    "loggers": {
        "engine": {
            "handlers": ["console_debug"],
            "level": "INFO"
        },
        "api": {
            "handlers": ["console_debug"],
            "level": "INFO"
        },
        "update-daemon": {
            "handlers": ["console_debug"],
            "level": "INFO"
        },
        "annotate-daemon": {
            "handlers": ["console_debug"],
            "level": "INFO"
        }
    }
  },
  "ds_config_defaults": {
    "adducts": {
      "+": ["+H", "+Na", "+K"],
      "-": ["-H", "+Cl" ]
    },
    "moldb_names": ["HMDB-v4"]
  },
  "colocalization": {
    "enabled": true
  }
}
