    "@types/sanitize-html": "^1.18.2",
    "@types/sprintf-js": "^1.1.1",
    "@types/uuid": "^3.4.3",
    "ajv": "4.10.0",
    "amqplib": "^0.5.1",
    "apollo-server-express": "^2.0.4",
    "aws-sdk": "^2.13.0",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "config": "^1.26.1",
    "connect-redis": "^3.3.3",
    "cors": "^2.8.1",
    "elasticsearch": "^12.1.0",
    "express": "^4.14.0",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "fs-extra": "^4.0.3",
    "get-pixels": "^3.3.0",
    "graphql": "^0.13.2",
    "graphql-errors": "^2.1.0",
    "graphql-subscriptions": "^0.4.3",
