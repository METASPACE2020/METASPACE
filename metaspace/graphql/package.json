    "sinon": "^2.2.0",
    "sinon-chai": "^2.10.0",
    "ts-jest": "^23.1.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.(js|ts|tsx)?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(j|t)sx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./src/tests/setupTestFramework.ts",
    "globalSetup": "<rootDir>/src/tests/globalSetup.js",
    "globalTeardown": "<rootDir>/src/tests/globalTeardown.js",
    "clearMocks": true
  }
}
