{
  "name": "sm-graphql",
  "version": "0.6.0",
  "description": "sm-engine GraphQL interface",
  "main": "server.js",
  "author": "Artem Tarasov <artem.tarasov@embl.de>",
  "scripts": {
    "dev": "nodemon -e js,json,ts --require ts-node/register server.js",
    "start": "ts-node src/index.ts",
    "test": "NODE_ENV=test jest",
    "test-integration": "mocha --timeout 3000 tests/*RegrTest.js",
    "gen-binding": "graphql-binding --language typescript --input schema.ts --outputBinding src/binding.ts",
    "deref-schema": "node ./bin/deref_schema.js ./metadataSchemas/",
    "gen-sql-schema": "node ./bin/dump-sql-schema.js ../engine/sm/engine/tests/graphql_schema.sql",
    "gen-graphql-schema": "node ./bin/generate-json-graphql-schema.js ../webapp/tests/utils/graphql-schema.json"
  },
  "license": "ISC",
  "dependencies": {
    "@types/amqplib": "^0.5.9",
